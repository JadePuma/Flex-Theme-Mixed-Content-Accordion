                {% if block.settings.image_1 != blank %}
                <div class="accordion_section_image-container--{{block.id}}">
                <img  class="accordion_section_image--{{block.id}}" src="{{block.settings.image_1 | img_url: 'master'}}">
                </div>


                {% style %}

